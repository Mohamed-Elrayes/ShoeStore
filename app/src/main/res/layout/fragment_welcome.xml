<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <!--
        Using LinearLayout because I'm not expecting much text right now
        and everything should fit even in landscape orientation. Vertical LinearLayout doesn't
        add complexity with all the constraints configuration and all view are nicely displayed
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margTop"
            android:gravity="center_horizontal"
            android:text="welcome to my app" />

        <TextView
            android:id="@+id/welcome_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margTop"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="you can see list of shoes you can see list of shoes you can see list of shoes" />
        <Button
            android:id="@+id/btn_let_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="let to start" />
    </LinearLayout>
</layout>